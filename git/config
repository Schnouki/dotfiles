[user]
	name = Thomas Jost
	email = schnouki@schnouki.net
	signingkey = 3E0B0C49C0478597
[push]
	default = simple
[color]
	ui = true
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ag = grep --break --heading --line-number
	wdiff = diff --color-words
        dft = difftool -t difftastic
        dftu = difftool -t difftastic-inline
[diff]
	algorithm = histogram
	compactionHeuristic = true
	noprefix = true
        tool = difftastic
[difftool]
        prompt = false
[difftool "difftastic"]
        cmd = difft "$LOCAL" "$REMOTE"
[difftool "difftastic-inline"]
        cmd = difft --display=inline "$LOCAL" "$REMOTE"
[pager]
        difftool = true
[rebase]
	autosquash = true
[grep]
	extendRegexp = true
	lineNumber = true
[help]
	autocorrect = 25
[credential]
	helper = /usr/share/git/credential/netrc/git-credential-netrc -f ~/.netrc
[merge]
	conflictStyle = diff3
[commit]
	gpgSign = true
[magit]
	hideCampaign = true
[github]
	user = Schnouki
[gitlab]
	user = Schnouki

[includeIf "gitdir:~/doist/"]
	path = ~/.config/git/doist.inc
[cola]
	spellcheck = false
	theme = flat-dark-blue
	icontheme = dark
[init]
	templatedir = ~/.config/git/templates
	defaultBranch = main
[pull]
	ff = only
