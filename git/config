[alias]
	dft = difftool --tool difftastic
	dftu = difftool --tool difftastic-inline
	fp = fetch --prune
	fpa = fetch --prune --all
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	upp = !git fetch --prune && git checkout $(git symbolic-ref --short HEAD) && git pull
	wdiff = diff --color-words
[branch]
        autoSetupMerge = true
        autoSetupRebase = remote
[color]
	ui = true
[commit]
	gpgSign = true
[credential]
	helper = /usr/share/git/credential/netrc/git-credential-netrc -f ~/.netrc
[diff]
	algorithm = histogram
	compactionHeuristic = true
	noprefix = true
	tool = difftastic
[difftool]
	prompt = false
[difftool "difftastic"]
	cmd = difft "$LOCAL" "$REMOTE"
[difftool "difftastic-inline"]
	cmd = difft --display=inline "$LOCAL" "$REMOTE"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[includeIf "gitdir:~/doist/"]
	path = ~/.config/git/doist.inc
[init]
	templatedir = ~/.config/git/templates
	defaultBranch = main
[github]
	user = Schnouki
[gitlab]
	user = Schnouki
[grep]
	extendRegexp = true
	lineNumber = true
[help]
	autocorrect = 25
[magit]
	hideCampaign = true
[merge]
	conflictStyle = zdiff3
[pager]
	difftool = true
[pull]
	ff = only
[push]
        autoSetupRemote = true
	default = simple
[rebase]
	autosquash = true
[sendemail]
	annotate = true
	envelopeSender = auto
	sendmailCmd = msmtpq -a schnouki.net
[user]
	name = Thomas Jost
	email = schnouki@schnouki.net
	signingkey = 3E0B0C49C0478597
